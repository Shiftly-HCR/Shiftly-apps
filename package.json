{
  "name": "shiftly-apps",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": "24.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @shiftly/web dev",
    "dev:mobile": "pnpm --filter @shiftly/mobile start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tamagui/lucide-icons": "^1.135.3",
    "burnt": "^0.13.0",
    "react-icons": "^5.4.0"
  }
}
