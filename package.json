{
  "name": "hestia-apps",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @hestia/web dev",
    "dev:mobile": "pnpm --filter @hestia/mobile start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
